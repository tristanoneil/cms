!!! 5
html(lang="en")
  head
    title CMS
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js")
    script(src="/js/lib/codemirror/lib/codemirror.js")
    script(src="/js/lib/codemirror/mode/javascript.js")
    script(src="/js/editor.js")
    link(rel="stylesheet", href="/js/lib/codemirror/lib/codemirror.css")
    link(rel="stylesheet", href="/editor.css")
  body
    #header
      .title
        h2= "Content Editor"
      .menu
        .reference.gray-button= "Reference"
        .save.green-button= "Save"
      .clear
    #reference
      h4= "TextField"
      p= "Text input field."
      pre
        "title": {
          "widget": "TextField",
          "required": true
        }
      h4= "TextArea"
      p= "Textarea field."
      pre
        "body": {
          "widget": "TextArea",
          "required": true
        }
      h4= "Dropdown"
      p= "Dropdown field."
      pre
        "flavor": {
          "widget": "Dropdown",
          "options": ["Chocolate", "Vanilla", "Banana"]
        }
      h4= "RadioButtons"
      p= "A set of radio buttons."
      pre
        "flavor": {
          "widget": "RadioButtons",
          "options": ["Chocolate", "Vanilla", "Banana"]
        }
      h4= "CheckBoxes"
      p= "A set of check boxes."
      pre
        "flavors": {
          "widget": "CheckBoxes",
          "options": ["Chocolate", "Vanilla", "Banana"]
        }
      h4= "Boolean"
      p= "A single checkbox."
      pre
        "published": {
          "widget": "Boolean",
          "required": true
        }
    input(type="hidden", id="content", value=file)
